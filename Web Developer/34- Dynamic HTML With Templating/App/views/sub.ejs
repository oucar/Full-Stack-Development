<!-- include common head part from the partials -->
<!-- - treated as html -->
<%- include('partials/head.ejs') %> 

<body>
    <%= num %>
    <h2> Browsing the <%= name %> subreddit </h2>
    <h3> Subscribers: <%= subscribers %> </h3>
    <h3> Description: <%= description %> </h3>

    <!-- for each post  -->
    <% for( let post of posts ) { %>
        <article>
            <p> <%= post.title %> - by <%= post.author %>  </p>
            <!-- if there is an img -->
            <% if(post.img){ %> 
                <img src="<%= post.img %> " alt="" srcset="">
            <% } else { %> 
                <p> <strong>No image!</strong> </p>
            <% } %> 
        </article>
    <% } %>

</body>

</html>